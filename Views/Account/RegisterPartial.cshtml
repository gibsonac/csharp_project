@model User
@{
    ViewData["Title"] = "Home Page";
}
    <form asp-action="Register" asp-controller="Account" method="post">
        <div class="form-group row">
            <label for="inputEmail3" asp-for="First_Name" class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-7">
            <span asp-validation-for="First_Name"></span>
                <input type="text" asp-for="First_Name" class="form-control" id="inputEmail3" placeholder="First Name">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" asp-for="Last_Name"class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-7">
                <span asp-validation-for="Last_Name"></span>
                <input type="text" asp-for="Last_Name" class="form-control" id="inputEmail3" placeholder="Last Name">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail3" asp-for="Email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-7">
                <span asp-validation-for="Email"></span>
                <input type="email" asp-for="Email" class="form-control" id="inputEmail3"placeholder="Something@something.com">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" asp-for="Password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-7">
                <span asp-validation-for="Password"></span>
                <input type="password" asp-for="Password" class="form-control" id="inputPassword3" placeholder="Password">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" asp-for="password_confirm" class="col-sm-2 col-form-label">Confirm Password</label>
            <div class="col-sm-7">
                <span asp-validation-for="password_confirm"></span>
                <input type="password" asp-for="password_confirm" class="form-control" id="inputPassword3" placeholder="Confirm Password">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" asp-for="Street" class="col-sm-2 col-form-label">Street Address</label>
            <div class="col-sm-7">
                <span asp-validation-for="Street"></span>
                <input type="text" asp-for="Street" class="form-control" id="inputPassword3" placeholder="Street Address">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" asp-for="City" class="col-sm-2 col-form-label">City</label>
            <div class="col-sm-7">
                <span asp-validation-for="City"></span>
                <input type="text" asp-for="City" class="form-control" id="inputPassword3" placeholder="Street Address">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" asp-for="State" class="col-sm-2 col-form-label">State</label>
            <div class="col-sm-7">
                <span asp-validation-for="State"></span>
                <input type="text" asp-for="State" class="form-control" id="inputPassword3" placeholder="Street Address">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" asp-for="Zipcode" class="col-sm-2 col-form-label">Zip Code</label>
            <div class="col-sm-7">
                <span asp-validation-for="Zipcode"></span>
                <input type="number" asp-for="Zipcode" class="form-control" id="inputPassword3" placeholder="Street Address">
            </div>
        </div>
            <button type="submit" class="btn btn-primary">Sign up Now</button>
    </form>
