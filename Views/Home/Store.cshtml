@model List<Product>
@{
    ViewData["Title"] = "Store";
}
<div class="container text-center">
    <div class="row">
        <div class="col-6">
            <h2>Canvas Prints: </h2>
            @foreach(var product in Model)
            {
            @if(product.Style == "Canvas")
            {
            <div class="card" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.8);">
                <div class="card-body">
                    <p class="card-text" style="color: black; font-size: 1.3em;"><strong style="color: black;">Size:</strong> @product.Size</p>
                    <p class="card-text" style="color: black; font-size: 1.3em;"><strong style="color: black;">Price:</strong> $@product.Price</p>
                </div>
            </div>
            <br>
            }
        }
        </div>
        <div class="col-6">
            <h2>Metalic Prints: </h2>
                @foreach(var product in Model)
        {
            @if(product.Style == "Metalic")
            {
            <div class="card" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.8);">
                <div class="card-body">
                    <p class="card-text" style="color: black; font-size: 1.3em;"><strong style="color: black;">Size:</strong> @product.Size</p>
                    <p class="card-text" style="color: black; font-size: 1.3em;"><strong style="color: black;">Price:</strong> $@product.Price</p>
                </div>
            </div>
            <br>
            }
        }
        </div>
    </div>
</div>



