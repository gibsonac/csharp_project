@{
    ViewData["Title"] = "Image @ViewBag.ThisImage.Title";
}
@model ProductQuantity
<div class="container">
<div class="row">
    <div class="col-8">
        <a href="@ViewBag.ThisImage.Image_URL"><img style="width:500px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.8);" src="@ViewBag.ThisImage.Image_URL" alt="@ViewBag.ThisImage.Title"></a>
    </div>
    <div class="col-4">
        <h1>@ViewBag.ThisImage.Title</h1>
        <p>@ViewBag.ThisImage.Description</p>
        <h4>Order one!</h4>
        <form asp-controller="Home" asp-action="AddToCart" asp-route-id="@ViewBag.ThisImage.Galleryid">
            <div class="form-group  col-6">
                <label asp-for="Style">Style</label>
                <span asp-validation-for="Style"></span>
                <select asp-for="Style" class="form-control">
                    <option>Canvas</option>
                    <option>Metalic</option>
                </select>
            </div>
            <div class="form-group col-6">
                <label asp-for="Size">Size</label>
                <span asp-validation-for="Size"></span>
                <select asp-for="Size" class="form-control">
                    <option>5x7</option>
                    <option>8x10</option>
                    <option>24x36</option>
                </select>
            </div>
            <div class="form-group col-4">
                <label asp-for="Quantity">Quantity</label>
                    <span asp-validation-for="Quantity"></span>
                    <input type="number" asp-for="Quantity" class="form-control">
            </div>
            <div class="form-group col-4">
            <button class="btn btn-light"type="submit btn-light">Submit</button>
            </div>
        </form>
    </div>
</div>
</div>